DECLARE
    CURSOR customer_cursor IS
        SELECT c.CustomerID, c.DOB, l.LoanID, l.InterestRate
        FROM Customers c
        JOIN Loans l ON c.CustomerID = l.CustomerID;

    v_CustomerID Customers.CustomerID%TYPE;
    v_DOB Customers.DOB%TYPE;
    v_LoanID Loans.LoanID%TYPE;
    v_InterestRate Loans.InterestRate%TYPE;
    v_Age NUMBER;
BEGIN
    FOR customer_rec IN customer_cursor LOOP
        v_CustomerID := customer_rec.CustomerID;
        v_DOB := customer_rec.DOB;
        v_LoanID := customer_rec.LoanID;
        v_InterestRate := customer_rec.InterestRate;

        v_Age := TRUNC(MONTHS_BETWEEN(SYSDATE, v_DOB) / 12);

        IF v_Age > 60 THEN
            UPDATE Loans
            SET InterestRate = v_InterestRate * 0.99
            WHERE LoanID = v_LoanID;
        END IF;
    END LOOP;

    COMMIT;
END;
/
