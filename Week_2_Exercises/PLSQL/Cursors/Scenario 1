DECLARE
    CURSOR GenerateMonthlyStatements IS
        SELECT c.CustomerID, c.CustomerName, t.TransactionID, t.TransactionDate, t.Amount
        FROM Customers c
        JOIN Transactions t ON c.CustomerID = t.CustomerID
        WHERE TO_CHAR(t.TransactionDate, 'YYYY-MM') = TO_CHAR(SYSDATE, 'YYYY-MM')
        ORDER BY c.CustomerID, t.TransactionDate;

    customer_id Customers.CustomerID%TYPE;
    customer_name Customers.CustomerName%TYPE;
    transaction_id Transactions.TransactionID%TYPE;
    transaction_date Transactions.TransactionDate%TYPE;
    amount Transactions.Amount%TYPE;
BEGIN
    OPEN GenerateMonthlyStatements;
    LOOP
        FETCH GenerateMonthlyStatements INTO customer_id, customer_name, transaction_id, transaction_date, amount;
        EXIT WHEN GenerateMonthlyStatements%NOTFOUND;
        
        DBMS_OUTPUT.PUT_LINE('Customer ID: ' || customer_id);
        DBMS_OUTPUT.PUT_LINE('Customer Name: ' || customer_name);
        DBMS_OUTPUT.PUT_LINE('Transaction ID: ' || transaction_id);
        DBMS_OUTPUT.PUT_LINE('Transaction Date: ' || TO_CHAR(transaction_date, 'YYYY-MM-DD'));
        DBMS_OUTPUT.PUT_LINE('Amount: ' || amount);
        DBMS_OUTPUT.PUT_LINE('-------------------------------');
    END LOOP;
    CLOSE GenerateMonthlyStatements;
END;
/
